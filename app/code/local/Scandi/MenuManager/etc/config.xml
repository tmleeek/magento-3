<config>
    <modules>
        <Scandi_MenuManager>
            <version>0.1.3</version>
        </Scandi_MenuManager>
    </modules>
    <global>
        <models>
            <scandi_menumanager>
                <class>Scandi_MenuManager_Model</class>
                <resourceModel>scandi_menumanager_resource</resourceModel>
            </scandi_menumanager>
            <scandi_menumanager_resource>
                <class>Scandi_MenuManager_Model_Resource</class>
                <entities>
                    <menu>
                        <table>scandi_menumanager_menu</table>
                    </menu>
                    <menu_item>
                        <table>scandi_menumanager_menu_item</table>
                    </menu_item>
                    <menu_store>
                        <table>scandi_menumanager_menu_store</table>
                    </menu_store>
                </entities>
            </scandi_menumanager_resource>
        </models>
        <helpers>
            <scandi_menumanager>
                <class>Scandi_MenuManager_Helper</class>
            </scandi_menumanager>
        </helpers>
        <blocks>
            <scandi_menumanager>
                <class>Scandi_MenuManager_Block</class>
            </scandi_menumanager>
        </blocks>
        <resources>
            <scandi_menumanager_setup>
                <setup>
                    <module>Scandi_MenuManager</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </scandi_menumanager_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <scandi_menumanager before="Mage_Adminhtml">Scandi_MenuManager_Adminhtml</scandi_menumanager>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <scandi_menumanager>
                    <file>scandi_menumanager.xml</file>
                </scandi_menumanager>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <scandi_menumanager>
                    <file>scandi_menumanager.xml</file>
                </scandi_menumanager>
            </updates>
        </layout>
    </frontend>
</config>