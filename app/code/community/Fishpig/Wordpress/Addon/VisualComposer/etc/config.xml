<?xml version="1.0"?>
<config>
	<modules>
		<Fishpig_Wordpress_Addon_VisualComposer>
			<version>1.1.0.20</version>
			<fishpig>
				<id>visual-composer</id>
				<name>Visual Composer</name>
				<url>https://fishpig.co.uk/magento/wordpress-integration/visual-composer/</url>
			</fishpig>
		</Fishpig_Wordpress_Addon_VisualComposer>
	</modules>
	<global>
		<blocks>
			<wp_addon_visualcomposer>
				<class>Fishpig_Wordpress_Addon_VisualComposer_Block</class>			
			</wp_addon_visualcomposer>
		</blocks>
		<helpers>
			<wp_addon_visualcomposer>
				<class>Fishpig_Wordpress_Addon_VisualComposer_Helper</class>			
			</wp_addon_visualcomposer>
		</helpers>
		<models>
			<wp_addon_visualcomposer>
				<class>Fishpig_Wordpress_Addon_VisualComposer_Model</class>
			</wp_addon_visualcomposer>
		</models>
	</global>
	<frontend>
		<events>
			<wordpress_string_filter_before>
				<observers>
					<wp_addon_visualcomposer>
						<type>singleton</type>
						<class>Fishpig_Wordpress_Addon_VisualComposer_Model_Observer</class>
						<method>applyStringFiltersObserver</method>
					</wp_addon_visualcomposer>
				</observers>
			</wordpress_string_filter_before>
		</events>
	</frontend>
	<wordpress>
		<core>
			<modules>
				<wp_addon_visualcomposer/>
			</modules>
		</core>
	</wordpress>
	<fishpig>
		<injection>
			<Fishpig_Inject_Wordpress_Model_Observer_Plugin_Abstract>
				<Fishpig_Wordpress_Addon_VisualComposer>
					<Model_Observer_Plugin_Abstract><ignore/></Model_Observer_Plugin_Abstract>
				</Fishpig_Wordpress_Addon_VisualComposer>
			</Fishpig_Inject_Wordpress_Model_Observer_Plugin_Abstract>
			<Fishpig_Inject_Wordpress_Block_System_Config_Form_Field_License>
				<Fishpig_Wordpress_Addon_VisualComposer>
					<Block_System_Config_Form_Field_License><ignore/></Block_System_Config_Form_Field_License>
				</Fishpig_Wordpress_Addon_VisualComposer>
			</Fishpig_Inject_Wordpress_Block_System_Config_Form_Field_License>
			<Fishpig_Inject_Wordpress_Helper_License>
				<Fishpig_Wordpress_Addon_VisualComposer>
					<Helper_License><ignore/></Helper_License>
				</Fishpig_Wordpress_Addon_VisualComposer>
			</Fishpig_Inject_Wordpress_Helper_License>
			<Fishpig_Inject_Wordpress_Helper_Core>
				<Fishpig_Wordpress_Addon_VisualComposer>
					<Helper_Core><ignore/></Helper_Core>
				</Fishpig_Wordpress_Addon_VisualComposer>
			</Fishpig_Inject_Wordpress_Helper_Core>
		</injection>
		<encode>
			<helper_license>app/code/community/Fishpig/Wordpress/Addon/VisualComposer/Helper/License.php</helper_license>
			<helper_core>app/code/community/Fishpig/Wordpress/Addon/VisualComposer/Helper/Core.php</helper_core>
			<observer>app/code/community/Fishpig/Wordpress/Addon/VisualComposer/Model/Observer.php</observer>
			<observer_plugin_abstract>app/code/community/Fishpig/Wordpress/Addon/VisualComposer/Model/Observer/Plugin/Abstract.php</observer_plugin_abstract>
		</encode>
	</fishpig>
</config>
