<?xml version="1.0"?>
<config>
    <sections>
        <wordpress>
            <groups>
	        	<license>
		        	<fields>
                    	<wp_addon_root>
                    		<label>Root</label>
							<frontend_model>wp_addon_root/system_config_form_field_license</frontend_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
                    	</wp_addon_root>
		        	</fields>
	        	</license>
            	<integration>
            		<fields>
            			<route>
            				<depends><at_root>0</at_root></depends>
            			</route>
            			<at_root>
							<label>Integrate at Root</label>
            				<sort_order>3</sort_order>
            				<frontend_type>select</frontend_type>
            				<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
            			</at_root>
            			<replace_homepage>
							<label>Replace Homepage with WordPress</label>
            				<sort_order>4</sort_order>
            				<frontend_type>select</frontend_type>
            				<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_website>1</show_in_website>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<depends><at_root>1</at_root></depends>
            			</replace_homepage>
            		</fields>
            	</integration>
            </groups>
        </wordpress>
    </sections>
</config>